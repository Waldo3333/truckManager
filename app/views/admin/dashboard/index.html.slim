/ app/views/admin/dashboard/index.html.slim
.px-30.py-8 class="w-[100vw]"
  h1.text-3xl.font-bold.mb-8 Dashboard Admin

  / Bouton principal vers le planning
  .mb-8
    = link_to admin_planning_path, class: "block bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white rounded-lg shadow-lg p-6 transition-all transform hover:scale-102" do
      .flex.items-center.justify-between
        div
          .text-2xl.font-bold üìÖ Planning des interventions
          .text-blue-100.mt-1 G√©rer les interventions et les affectations de camions
        .flex.gap-3.bg-white.p-4.rounded-2xl.text-black.items-center
          .text-sm.uppercase
            p Interventions
            p aujourd'hui
          .text-3xl.font-bold.mt-2 = @interventions_today

        .text-4xl ‚Üí



  .flex.gap-6.justify-between.mb-8 class="w-[100%]"
    / Demain
    .bg-blue-300.rounded-lg.shadow.p-6.flex.items-center.justify-between class="w-[20vw] h-[20vh]"
      .flex.flex-col
        .text-gray-500.text-sm.uppercase Demain
        .text-3xl.font-bold.mt-2 = "#{@interventions_tomorrow}"
        .text-gray-500.text-sm.uppercase.mt-2 intervention#{@interventions_tomorrow > 1 ? 's' : ''}
    / Planning semaine
    = link_to admin_weekly_recap_path do
      .bg-blue-300.rounded-lg.shadow.p-6.flex class="grow h-[20vh]"
        .flex.items-center.w-100.justify-around.gap-3.w-max
          .flex.flex-col.items-center
            .text-gray-500.text-sm.uppercase R√©cap. Semaine
            .text-gray-500.text-sm.uppercase üìÖ
            .text-gray-500.text-sm.uppercase #{@week_start.strftime('%d/%m')} - #{@week_end.strftime('%d/%m')}
          .text-4xl ‚Üí
          .flex.justify-between.gap-3
            - @trucks.each do |truck|
              - count = truck.interventions.where(date: @week_start..@week_end).count
              .rounded-lg.p-4.bg-amber-100
                .flex.items-center.flex-col
                  div
                    .text-sm.font-bold.mt-1 class=(count > 0 ? "text-green-900" : "text-gray-400") = count
                  i.fas.fa-truck.text-xs class=(count > 0 ? "text-green-900" : "text-gray-400")
  .flex.gap-6.mb-8.justify-between class="w-[100%]"
    / Card Chantiers
    .bg-sky-900.rounded-lg.shadow.p-6.flex.items-center.justify-between class="w-[40vw] h-[20vh]"
      .flex.flex-col
        .text-white.text-sm.uppercase Chantiers
        .text-3xl.text-white.font-bold.mt-2 = @chantiers_count
      .flex.items-center.flex-col.py-6
        = link_to admin_chantiers_path do
          i class="fa-regular fa-eye text-4xl hover:scale-120 transition-all transform  text-white"

        = link_to new_admin_chantier_path  do
          p.text-6xl class="hover:scale-120 transition-all transform text-white" +

    / Card Camions
    = link_to admin_trucks_path do
      .bg-sky-900.rounded-lg.shadow.p-6.hover:scale-110.transition-all.transform.flex.items-center.justify-between class="w-[20vw] h-[20vh]"
        .flex.flex-col
          .text-white.text-sm.uppercase Camions
          .text-white.text-3xl.font-bold.mt-2 = @trucks_count
        .flex
          i class="fa-regular fa-pen-to-square text-4xl text-white"


    / Card Salari√©s
    = link_to admin_users_path do
      .bg-sky-900.rounded-lg.shadow.p-6.hover:scale-110.transition-all.transform.flex.items-center.justify-between class="w-[20vw] h-[20vh]"
        .flex.flex-col
          .text-white.text-sm.uppercase Personnel
          .text-white.text-3xl.font-bold.mt-2 = @users_count
        .flex
          i class="fa-regular fa-pen-to-square text-4xl text-white"
