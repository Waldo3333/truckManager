<%# app/views/layouts/employee.html.erb %>
<!DOCTYPE html>
<html>
  <head>
    <title>TruckCalendar - Employé</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%# FontAwesome %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100">
    <%# Navbar Employé %>
    <nav class="bg-blue-600 text-white shadow-lg">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center gap-8">
            <h1 class="text-xl font-bold">
              <i class="fas fa-truck mr-2"></i>
              TruckCalendar
            </h1>

            <%= link_to employee_dashboard_path, class: "hover:bg-blue-700 px-3 py-2 rounded transition-colors" do %>
              <i class="fas fa-home mr-1"></i>
              Accueil
            <% end %>

            <%= link_to employee_my_schedule_path, class: "hover:bg-blue-700 px-3 py-2 rounded transition-colors" do %>
              <i class="fas fa-calendar-week mr-1"></i>
              Mon Planning
            <% end %>

            <%= link_to employee_team_schedule_path, class: "hover:bg-blue-700 px-3 py-2 rounded transition-colors" do %>
              <i class="fas fa-users mr-1"></i>
              Planning Équipe
            <% end %>
          </div>

          <div class="flex items-center gap-4">
            <span class="text-sm">
              <i class="fas fa-user-circle mr-1"></i>
              <%= current_user.email.split('@').first.capitalize %>
            </span>
            <%= button_to destroy_user_session_path, method: :delete, class: "bg-red-500 hover:bg-red-600 px-3 py-2 rounded transition-colors text-sm" do %>
              <i class="fas fa-sign-out-alt mr-1"></i>
              Déconnexion
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <%# Flash messages %>
    <% if notice %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 mx-4 mt-4 rounded relative" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mx-4 mt-4 rounded relative" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <%# Contenu principal %>
    <%= yield %>
  </body>
</html>
